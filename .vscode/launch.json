{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx"], // Replace with 'ts-node' if you prefer that
      "args": ["${workspaceFolder}/src/index.ts"],
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/**/*.ts"],
      "sourceMaps": true
    }
  ]
}
